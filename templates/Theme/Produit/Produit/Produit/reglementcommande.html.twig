{% block title %}
{{ parent() }} | {{ site }}, Conditions d'utilisations des services - {{ metier }}
{% endblock %}
{% block userblog_body %}

<!-- welcome section -->
<section class="welcome" style="padding-top: 50px; padding-bottom: 20px; margin-top: 100px;">
<h3 style="padding: 0px 25px; color: #fff;"><span class="fa fa-stop"></span> Entreprise <span class="fa fa-angle-double-right"></span> Conditions d'utilisations</h3>
</section>
<!-- /welcome section -->

<!-- pricing section -->
<section class="team" style="padding-top: 20px; border-top: 1px solid #ddd; margin-bottom: 200px; background: #f5f5f5;">
	<div class="container" style="padding: 15px; width: 98%; margin-right: 30px;">
		<div class="row pull-right">
		<div class="col-lg-12 animecourant-panel">
		</div>

		<div class="col-md-8 panel panel-widget" style="text-align: left;">		
		 <div style="text-align:left;">
			<div class="skill-wrap clearfix" style="margin: 15px 0px;">
			{% for infos in app.session.flashbag.get('information') %}
			{% if loop.first %}	
				<div class="alert alert-warning" style="broder-radius: 0px;"><span class="fa fa-warning"></span> {{ infos|raw }}</div>	
			{% endif %}
			{% endfor %}
			
			<a href="#!" class="btn btn-primary btn-block" style="border-radius: 0px;text-align: left;"><span class="fa fa-money"></span> Procédez au payement des frais de réservation en faisant un dépot sur l'un des comptes ci-dessus.</a>
			<div style="border: 2px solid #f2f2f2; border-radius: 2px; margin-top: 15px; height: 650px;">
				<object data="{{ asset(panier.getwebpath) }}" type="application/pdf" style="display: block;margin:0;padding:0;border:0;width:100%;height:100%;">
				<p>Télécharger : <a href="{{ path('produit_produit_telecherger_panier', {'id': panier.id }) }}">{{ asset(panier.getwebpath) }}</a></p>
				</object>
			</div>

			</div>
		</div>
	   <div class="clearfix"> </div>
			   
		</div>
		<div class="col-md-4">
		<div class="filtr-container toutleblock">
			
		{% include 'UsersUserBundle:User:lienutile.html.twig' %}

		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 stop-courant-panel">
						
		</div>
		</div>
		</div>
		</div>
</div>
</section>
<!-- /pricing section -->
<script src="{{ asset('mcs/js/onvisible.js') }}" type="text/javascript"></script>
{% endblock %}



{% block userblog_body %}

<div class="container">	
<div class="row">	
<div class="col-md-12 text-left">
	<div aria-label="breadcrumb" style="background: #fff; border: 1px solid #f3f3f3;">
		<button type="button" class="btn btn-outline-secondary breadcrumb-toggle" data-toggle="collapse" data-target="#nav" aria-expanded="false" aria-controls="nav">
			Allez à
			<i class="fa fa-caret-down"></i>
		</button>
		
		{% include "Theme/General/Template/Menu/contacts.html.twig" %}
		
		<ol id="nav" class="breadcrumb collapse" style="background: #fff; border: none; margin-bottom: 0px;">
			<li class="breadcrumb-item"><a href=""><span class="fa fa-home"></span> Accueil </a></li>
			<li class="breadcrumb-item" data-toggle="tooltip" data-trigger="manual"><a href="#!">Tous les cours</a></li>
		</ol>
	</div>
</div>
</div>
</div>


<div class="container">
	<div class="row mt centered">
		<div class="col-lg-9" >
			<div class="section-title" style="margin-bottom: 10px;margin-top: 20px;">
				<h2>Liste des cours de nos diffirentes formations à distances</h2>
				<p>
					Ces cours sont accessibles 24h/24 pour vous permettre de poursuivre sereinement votre formation à distance.
				</p>
			</div>
		</div>
		<div class="col-lg-3">
			{% if nombrepage > 0  %}

			{% if page > 1 and page <= nombrepage %}
			{% set pagepre = page - 1 %}
			{% else %}
			{% set pagepre = nombrepage %}
			{% endif %}

			{% if page < nombrepage %}
			{% set pagesuiv = page + 1 %}
			{% else %}
			{% set pagesuiv =  1 %}
			{% endif %}

			<div class="pagination pull-right" style="margin-top: 15px;">
				<a href="{{ path('produit_produit_accueil_boutique_produit', {'page': pagepre }) }}" ><<</a>
				{% for p in 1..nombrepage %}
				<a href="{{ path('produit_produit_accueil_boutique_produit', {'page': p }) }}" class="{% if p == page %}active{% endif %}">{{ p }}</a>
				{% endfor %}
				<a href="{{ path('produit_produit_accueil_boutique_produit', {'page': pagesuiv }) }}">>></a>
			</div>
			
			{% endif %}
		</div>
		<div class="col-lg-12">
			<hr/>
		</div>
	</div><!-- /row -->
	
	<div class="row mt centered">
		{% for produit in liste_produit %}
		<div class="col-md-4" style="margin-bottom: 15px;">
			{% include 'Theme/Produit/Produit/Produit/produitdescript.html.twig' %}
		</div>
		{% else %}
		<div class="col-md-12">
			<div class="text-center" style="height: 400px; padding-top: 100px; background: #fff; display: block; width: 100%!important; border: 1px solid #f4f4f4; border-radius: 5px;">
				<span class="fa fa-frown-o"></span> Aucune données disponible pour cette requête.</br>
				<hr style="width: 100px; border-bottom: 1px solid red;">
			</div>
		</div>
		{% endfor %}
	</div><!-- /row -->
	
	<div class="row mt centered" style="margin-bottom: 10px; margin-top: 0px;">
	  <div class="col-lg-12"  style="padding: 3px 15px 3px 10px;">
	  <div style="border-top: 1px dashed #999; text-align: left;"><a href="{{ path('produit_produit_module_deformation') }}" style="padding: 0px; margin: 0px;"><span class="fa fa-list"></span> Catalogue cours <span class="fa fa-arrow-circle-right"></span></a> <a href="{{ path('produit_service_visiter_notre_blog') }}" class="pull-right"><span class="fa fa-arrow-circle-left"></span> Formations <span class=" fa fa-bookmark-o"></span></a> </div>
	  </div>
	</div>
</div><!-- /container -->

{% endblock %}


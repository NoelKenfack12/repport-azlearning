}else{
filename = '';
filesize = 0;
return true;
}
if(filesize == 0 || filesize > taillemax)
{
	return (false);
}
fileExt = getExtension(filename);
for (i=0; i<listeExt.length; i++)
{
	if ( fileExt == listeExt[i] ) 
	{
		return (true);
	}
}
return (false);
}


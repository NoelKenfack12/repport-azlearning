
{% extends "Theme/Users/User/layoutlogin.html.twig" %}
{% block meta %}

	{{ parent() }}
	<meta name="keywords" content="{{ site }}, Business, Innovation,Administration"/>
	<meta name="author" content="Noel Kenfack"/>
	<meta name="description" content="{{ site }} | Inscription | Cameroun | {{ metier }}"/>

{% endblock %}

{% block title %}

	{{ parent() }} | Connexion

{% endblock %}

{% block stylesheets %}

	{{ parent() }}

	<style media="screen">
	.tint {
		background: linear-gradient(
			rgba(0, 0, 0, .6),
			rgba(0, 0, 0, .1)),
			url("{% if loginbg != null and loginbg.src != null %}{{ asset(loginbg.getwebpath) }}{% else %}https://images.unsplash.com/photo-1420745981456-b95fe23f5753?dpr=1&auto=format&fit=crop&w=1000&q=80&cs=tinysrgb{% endif %}") 100% / cover ;
		height: 100%;
		padding: 1.5em;
		width: 50%;
		background-size: cover;
		}

		h1 {
		margin-bottom: .25em;
		}

		h1,
		p,
		a {
			color: rgba(255, 255, 255, .95);
		}
		.modal-open .modal {
			overflow-x: hidden;
			overflow-y: auto;
			background: rgba(0,0,0,0.5);
		}
		.login-wrapper .login-btn{
			background-color: #092759;
			border: 1px solid #092759;
		}
		.login-wrapper .login-btn:hover{
			background-color: #fff;
			border: 1px solid #76b4e7;
			color: #76b4e7;
		}
		.login-check-box .custom-control-label::before{
			left: 0px;
		}
		.custom-control-input {
			width: 0px!important;
		}
	</style>

{% endblock %}

{% block userblog_body %}

<div class="container-fluid">
<div class="row">

<div class="col-md-6 d-flex">
  <div class="login-wrapper m-auto">
	<div class="brand-wrapper" style="margin-bottom: 50px;">
	  <img src="{% if paramlogosm != null and paramlogosm.src != null %}{{ asset(paramlogosm.getwebpath) }}{% else %}{{ asset('template/images/logo.png') }}{% endif %}" alt="logo" class="logo">
		{% if paramlogosm != null  %}
		 <a href="{{ path('users_user_acces_plateforme') }}"><strong><span style="color: #343a40;">{{ paramlogosm.link }}</span> <span style="color: #739fec;"> {{ paramlogosm.valeur }}</span></strong></a>
		{% else %}
			<a href="{{ path('users_user_acces_plateforme') }}"><strong><span style="color: #343a40;">AZ</span> <span style="color: #739fec;"> E-learning</span></strong></a>
	  {% endif %}
	</div>
	<p class="login-description">Connectez-vous à votre compte</p>
	{% if error %}
		<p class="text-center" style="color: red;">Mot de passe, Email ou Téléphone invalid</p>
	{% endif %}

	<form action="{{ path('login') }}" method="post">
	  <div class="form-group">
		<label for="email" class="sr-only">Email</label>
		<div class="input-group">
		  <div class="input-group-prepend" style="padding: 15px 10px 15px 0px;">
			<span class="input-group-text"><i class="fa fa-envelope"></i></span>
		  </div>
		  <input type="email" id="username" name="_username" value="{{ last_username }}" required class="form-control" placeholder="Email ou Téléphone">
		</div>
	  </div>
	  <div class="form-group">
		<label for="password" class="sr-only">Password</label>
		<div class="input-group">
		  <div class="input-group-prepend" style="padding: 15px 10px 15px 0px;">
			<span class="input-group-text"><i class="fa fa-lock"></i></span>
		  </div>
		  <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required>
		</div>
	  </div>
	  <div class="form-options-wrapper">
		<div class="custom-control custom-checkbox login-check-box">
		  <input type="checkbox" class="custom-control-input" id="customCheck1"/>
		  <label class="custom-control-label" for="customCheck1">Remember me</label>
		</div>
		<a href="#!" class="forgot-password-link modal_reset_password">
			<span class="fa fa-info-circle"></span> Mot de passe oublié
		</a>
	  </div>
	  <button name="login" id="login" class="btn btn-block login-btn" style="cursor: pointer;">Connexion</button>
	</form>
	<p class="login-wrapper-footer-text">Vous n'avez pas encore de compte ? </br>
		<a href="{{ path('users_user_inscription_user') }}" class="text-reset">Créer un compte</a>
	</p>
	<nav class="social-links">
		<a href="http://facebook.com/AZcorpAfrica" target="_blank"><i class="fa fa-facebook-f"></i></a>
		<a href="https://twitter.com/gaielbleriot?lang=en" target="_blank"><i class="fa fa-twitter"></i></a>
		<a href="https://wa.me/237699934926" target="_blank"><i class="fa fa-whatsapp"></i></a>
		<a href="https://www.youtube.com/channel/UCvlgTzTAw1tABaOXhDM7U8g" target="_blank"><i class="fa fa-youtube"></i></a>
	</nav>
  </div>
</div>

<div class="col-md-6 px-0 d-none d-md-block">
<div style="background: #f2f2f2; position: fixed; width: 100%; border: 1px solid #ddd; height: 100%;">

	<div class="tint">
<h1>{% if loginbg != null %}{{ loginbg.link }}{% else %}Actualité de la semaine{% endif %}</h1>
  <p>{% if loginbg != null %}{{ loginbg.valeur }}{% else %}Suivez toute l'actualité de {{ site }}.{% endif %}</p>
	</div>

	<div >
	  <h1 class="title">{{ site }}</h1>
	  <h1 class="title title-large">{{ site }}</h1>
	</div>

	<div style="position: absolute; bottom: 5px; padding: 5px 20px;">
		<a href="{{ path('users_user_acces_plateforme') }}" style="color: #fff;">Accueil</a> <span class="fa fa-circle" style="font-size: 11px; color: #fff;"></span>
		<a href="{{ path('produit_produit_accueil_boutique_produit') }}" style="color: #fff;">Cours</a> <span class="fa fa-circle" style="font-size: 11px; color: #fff;"></span>
		<a href="{{ path('produit_service_visiter_notre_blog') }}" style="color: #fff;">Formations</a> <span class="fa fa-circle" style="font-size: 11px; color: #fff;"></span>
		<a href="{{ path('produit_service_forum_site') }}" style="color: #fff;">Forum</a>
	</div>
</div>
</div>
</div>
</div>



<div class="modal" data-backdrop="false"  id="open-modalSelect-reinitialize" style="padding-top: 50px;">
<div class="modal-dialog">
    <div class="modal-content">
		<div class="modal-header color-bottom" style="border-bottom: 4px solid #37c0fb; display: block!important;">
			<button type="button" class="close" data-dismiss="modal" style="float: right!important;">&times;</button>
			<h3 class="modal-title" style="margin: 0px; font-size: 22px;"> Initialisation du mot de passe</h3>
		</div>

		<div class="modal-body">
			<div class="wait-account-verification-affiliate" style="text-align: center; height: 100px; padding-top: 30px; color: #333;">
				Patientez un moment pendant la vérification de votre session.</br>
				<img src="{{ asset('template/images/loader1.gif') }}" alt="image" style="height: 40px; width: 40px;">
			</div>

			<div class="form-coustom-reset-password" style="text-align: left; display: none; margin-bottom: 30px;">
				<div class="col-md-10 col-sm-12 offset-md-1" style="color: #333;">
				 <div style="border-bottom: 1px solid #ddd; margin-bottom: 15px; font-size: 20px;">Identification du compte</div>
				 <form method="post" action="#" class="form-check-identifiant">
					<div class="form-group form-group-resset">
						<input type="text" class="form-control" placeholder="Rentrez l'email du compte" required="">
					</div>

					<div class="alert alert-resset alert-block alert-danger" style="display:none">
					<h4>Erreur !</h4>
					Nous n'avons pu identifier un compte avec cette adresse.
					</div>

					<div class="form-group">
						<button  class="btn btn-primary" style="background: #e34520;">Envoyer</button>
					</div>
				 </form>
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
		<div class="modal-footer" style="color: #333;">
			{% include 'Theme/General/Template/Menu/social.html.twig' %}
        </div>
    </div>
</div>
</div>

{% endblock %}

{% block javascripttemplate %}
	$('#username').focus();

	$('.modal_reset_password').click(function(){
		$('#open-modalSelect-reinitialize').modal('show');

		setTimeout(function(){
				$('.wait-account-verification-affiliate').hide();
				$('.form-coustom-reset-password').show();
		}, 2000);
	});

	$('form.form-check-identifiant').on('submit', function(){
		var hauteur = $(".form-coustom-reset-password").height() + 20;
		var largeur = $(".form-coustom-reset-password").width() + 5;
		var padding = Math.round(hauteur/2 - 50);
		var username = $(this).find('input').val();
		$(".form-coustom-reset-password").before('<div class="attente-resultat" style="padding-top: '+padding+'px; z-index: 102; height: '+hauteur+'px; text-align: center; vertical-align: center; width: '+largeur+'px; position: absolute; background: #fff; margin-top: -7px;"><span><img src="{{ asset('template/images/loader1.gif') }}" alt="..." style="width: 80px; height: 80px;" /></span></div>');
		$.post('{{ path('users_user_reset_user_password', {'etape': 1}) }}',{ username: username }, function(data){
			$('.attente-resultat').hide();
			if(data != 0)
			{
				$('.form-coustom-reset-password').replaceWith(data);
			}else{
				$("div.form-group-resset").addClass("has-error");
				$("div.alert-resset").show("slow").delay(4000).hide("slow");
			}
		});
		return false;
	});
{% endblock %}



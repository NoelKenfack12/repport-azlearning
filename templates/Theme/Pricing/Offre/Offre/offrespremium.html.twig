        font-size: var(--text-lg);
        color: var(--color-black);
      }
      
      .row2 {
        display: flex;
        justify-content: center;
        -moz-column-gap: 1.5rem;
             column-gap: 1.5rem;
      }
      .row--wrap {
        flex-wrap: wrap;
        row-gap: 2rem;
      }
      
    
      .icon--white {
        fill: var(--color-white);
      }
      
      
      
      .pricing-card {
        --c-emphasized-color: var(--color-black);
        --c-dim-color: var(--color-gray-300);
        --c-bg-color: var(--color-white);
        --c-bullet-color: var(--color-secondary-200);
        --c-feature-disabled-color: var(--color-gray-200);
        --c-description-opacity: 1;
        display: flex;
        flex-direction: column;
        width: 100%;
        min-height: 43rem;
        border-radius: var(--rounded-lg);
        padding: 2rem 1.5rem;
        color: var(--c-dim-color);
        background-color: var(--c-bg-color);
      }
      .pricing-card--primary {
        --c-emphasized-color: var(--color-white);
        --c-dim-color: var(--color-white);
        --c-bg-color: var(--color-primary-200);
        --c-bullet-color: var(--color-white);
        --c-feature-disabled-color: var(--color-primary-100);
        --c-description-opacity: 0.8;
      }
      .pricing-card--primary ::-moz-selection {
        color: var(--color-primary-200);
        background-color: var(--color-white);
      }
      .pricing-card--primary ::selection {
        color: var(--color-primary-200);
        background-color: var(--color-white);
      }
      .pricing-card--outline {
        border: 1px solid var(--color-gray-100);
      }
      .pricing-card--shadow {
        box-shadow: var(--shadow-md);
      }
      .pricing-card--best {
        order: -1;
      }
      @media only screen and (min-width: 50.5em) {
        .pricing-card--best {
          order: 0;
        }
      }
      .pricing-card__head {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      .pricing-card__tier {
        margin: 0;
        margin-right: auto;
        font-size: var(--text-md);
        font-weight: 400;
        color: var(--c-emphasized-color);
      }
      .pricing-card__tag {
        border-radius: var(--rounded-full);
        padding: 0.625rem 1.125rem;
        font-weight: 600;
        color: var(--color-white);
        background-color: var(--color-accent);
      }
      .pricing-card__description {
        margin: 0;
        margin-top: 1.625rem;
        opacity: var(--c-description-opacity);
      }
      .pricing-card__pricing-line {
        display: flex;
        align-items: center;
        gap: 0.56rem;
        margin: 0;
      }
      .pricing-card__price {
        font-size: var(--text-lg);
        font-weight: 600;
        color: var(--c-emphasized-color);
      }
      .pricing-card__features {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin: 0;
        padding: 0;
        list-style: none;
        font-weight: 500;
        color: var(--c-emphasized-color);
      }
      .pricing-card__feature {
        display: flex;
        align-items: center;
        gap: 1rem;
        fill: var(--c-bullet-color);
      }
      .pricing-card__feature--disabled {
        color: var(--c-feature-disabled-color);
        fill: var(--c-feature-disabled-color);
      }
      .pricing-card__bullet {
        width: 1.5rem;
        height: 1.5rem;
        fill: inherit;
      }
      .pricing-card__action {

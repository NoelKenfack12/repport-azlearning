function openSouscription(pack)
{
  $('#modalGestionCatalogueSelect').modal('show');
	$('.wait-chargement-content-module').show();
	$('.content-module-loading').hide();

	$.get('{{ path('pricing_offre_souscription_abonnement') }}',{ pack: pack }, function(data){
		$('.wait-chargement-content-module').hide();
		$('.content-module-loading').show();

    if(data == "promo")
    {
      $('.content-module-loading').html("Souscription effectuée avec succès. </br></br><a href='{{ path("produit_service_visiter_notre_blog") }}'><span class='fa fa-play'></span> choissez une formation</a>");
    }else if(data == "echec"){
      $('.content-module-loading').html("Une erreur a été rencontrée !");
    }else{
      $('.content-module-loading').html(data);
    }
		
	});
}


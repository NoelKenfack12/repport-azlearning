{% extends "Theme/Users/User/layouthome.html.twig" %}

{% block meta %}

	{{ parent() }}
	<meta name="keywords" content="{{ site }}, {{ site }}, formateurs, enseignants, éducateurs, travaux pratiques, exercices corrigés, formations, Informatique, Développements, Maintenance, Réseaux"/>
	<meta name="author" content="Noel Kenfack"/>
	<meta name="description" content="{{ site }} - Liste des formations {{ site }}"/>
	
{% endblock %}

{% block title %}
	{{ parent() }} - Liste des formations {{ site }}.
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}


{% block userblog_body %}
	
	<div class="container" style="min-height: 10px;">	
	<div class="row">	
		<div class="col-md-12 text-left">
			<div aria-label="breadcrumb">
				<button type="button" class="btn btn-outline-secondary breadcrumb-toggle" data-toggle="collapse" data-target="#nav" aria-expanded="false" aria-controls="nav">
					Allez à
					<i class="fa fa-caret-down"></i>
				</button>
				
				{% include "Theme/General/Template/Menu/contacts.html.twig" %}
				
				<ol id="nav" class="breadcrumb collapse" style="background: #fff;">
					<li class="breadcrumb-item"><a href=""><span class="fa fa-home"></span> Accueil </a></li>
					<li class="breadcrumb-item" data-toggle="tooltip" data-trigger="manual"><a href="#!">Nos références</a></li>

				</ol>
			</div>
		</div>
	</div>
	</div>
	
	<div class="container">	

	 <div class="row mt centered">
		<div class="col-lg-9" >
			<div class="section-title" style="margin-bottom: 10px;margin-top: 20px;">
				<h2>Liste de nos différents parcours de formation</h2>
				<p>
					Ces cours sont accessibles 24h/24 pour vous permettre de poursuivre sereinement votre formation à distance.
				</p>
			</div>
		</div>
		<div class="col-lg-3">
			{% if nombrepage > 0  %}

			{% if page > 1 and page <= nombrepage %}
			{% set pagepre = page - 1 %}
			{% else %}
			{% set pagepre = nombrepage %}
			{% endif %}

			{% if page < nombrepage %}
			{% set pagesuiv = page + 1 %}
			{% else %}
			{% set pagesuiv =  1 %}
			{% endif %}

			<div class="pagination pull-right" style="margin-top: 15px;">
				<a href="{{ path('produit_service_visiter_notre_blog', {'page': pagepre }) }}" ><<</a>
				{% for p in 1..nombrepage %}
				<a href="{{ path('produit_service_visiter_notre_blog', {'page': p }) }}" class="{% if p == page %}active{% endif %}">{{ p }}</a>
				{% endfor %}
				<a href="{{ path('produit_service_visiter_notre_blog', {'page': pagesuiv }) }}">>></a>
			</div>
			
			{% endif %}
		</div>
		<div class="col-lg-12">
			<hr/>
		</div>
	</div><!-- /row -->
	
	<div class="content-article variation-contenu" value="0" id="">
		{{ render(controller("App\\Controller\\Produit\\Service\\ServiceController:listeformation", {'page': page})) }}
	</div>
	
	<div class="row mt centered" style="margin-bottom: 10px; margin-top: 0px;">
	  <div class="col-lg-12"  style="padding: 3px 15px 3px 10px;">
		<div style="border-top: 1px dashed #999; text-align: left;">
			<a href="{{ path('produit_produit_module_deformation') }}" style="padding: 0px; margin: 0px;"><span class="fa fa-list"></span> Catalogue cours <span class="fa fa-arrow-circle-right"></span></a> 
			<a href="{{ path('produit_produit_accueil_boutique_produit') }}" class="pull-right"><span class="fa fa-arrow-circle-left"></span> Nos cours <span class=" fa fa-bookmark-o"></span></a> 
		</div>
	  </div>
	</div>
	
	</div>
{% endblock %}


